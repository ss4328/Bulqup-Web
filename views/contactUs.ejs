	<!-- Font Awesome Icon -->
	<link rel="stylesheet" href="/css/newHome/font-awesome.min.css">
	<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
	
	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="/css/newHome/newHomepage.css"/>
	<link type="text/css" rel="stylesheet" href="/css/footer.css" />
	
	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
	<style>
	    body {
            font-family: 'Roboto', sans-serif;
        }
	</style>

</head>

<body>
	<!-- HEADER -->
	<header id="header" style="background-color: #222;">
		<!-- NAV -->
		<% include partials/newHeader%>
		<!-- /NAV -->
		
		<!-- PAGE HEADER -->
		
	</header>
	<!-- /HEADER -->

	<!-- SECTION -->
	<div class="section" style="padding-top: 0px; background: #E4572E">
		<!-- container -->
		<div class="container" style="padding: 0px; 0px; 0px; 0px">
			<!-- contact us section -->
			<div class="container contact-form">
	            <div class="contact-image">
	                <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact"/>
	            </div>
	            
            	<form action="/sendmail" method="POST">
	                <h3>Drop Us a Message</h3>
	            	<div class="row">
	                    <div class="col-md-6">
	                        <div class="form-group">
	                            <input type="text" name="from" class="form-control" placeholder="Your Name *" value="" />
	                        </div>
	                        <div class="form-group">
	                            <input type="text" name="email" class="form-control" placeholder="Your Email *" value="" />
	                        </div>
	                        <div class="form-group">
	                            <input type="text" name="subject" class="form-control" placeholder="Subject *" value="" />
	                        </div>
	                        <div class="form-group">
	                            <input type="submit" name="btnSubmit" class="btnContact" value="Send Message" style="background: #E4572E" />
	                        </div>
	                    </div>
	                    <div class="col-md-6">
	                        <div class="form-group">
	                            <textarea name="message" class="form-control" placeholder="Your Message *" style="width: 100%; height: 150px;"></textarea>
	                        </div>
	                    </div>
	                </div>
            	</form>
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /SECTION -->


	<% include partials/footer%>

